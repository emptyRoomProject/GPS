    <div class="container">
        <h1>ä½ç½®æƒ…å ±ãƒ¡ãƒ¢ ğŸ“ (é«˜åº¦å¯¾å¿œç‰ˆ)</h1>

        <div class="controls">
            <button id="getLocationBtn">1. ç¾åœ¨åœ°ã‚’å–å¾—</button>
            <input type="text" id="locationName" placeholder="å ´æ‰€ã®åå‰ã‚’å…¥åŠ›">
            <button id="saveLocationBtn" disabled>2. ã“ã®å ´æ‰€ã‚’è¨˜éŒ²</button>
        </div>
        
        <p id="status">ãƒœã‚¿ãƒ³ã‚’æŠ¼ã—ã¦ä½ç½®æƒ…å ±ã‚’å–å¾—ã—ã¦ãã ã•ã„ã€‚</p>

        <h2>è¨˜éŒ²ã—ãŸå ´æ‰€ä¸€è¦§</h2>
        <ul id="locationList">
            </ul>
    </div>

    <script>
        // --- DOMè¦ç´ ã®å–å¾— (å¤‰æ›´ãªã—) ---
        const getLocationBtn = document.getElementById('getLocationBtn');
        const saveLocationBtn = document.getElementById('saveLocationBtn');
        const locationNameInput = document.getElementById('locationName');
        const statusDiv = document.getElementById('status');
        const locationListUl = document.getElementById('locationList');

        // --- ã‚°ãƒ­ãƒ¼ãƒãƒ«å¤‰æ•° (å¤‰æ›´ãªã—) ---
        let currentPosition = null;
        const STORAGE_KEY = 'my_locations_with_altitude'; // ã‚­ãƒ¼åã‚’å¤‰æ›´ã—ã¦ä»¥å‰ã®ãƒ‡ãƒ¼ã‚¿ã¨åŒºåˆ¥

        // --- é–¢æ•°å®šç¾© ---

        /**
         * localStorageã‹ã‚‰ãƒ‡ãƒ¼ã‚¿ã‚’èª­ã¿è¾¼ã¿ã€ãƒªã‚¹ãƒˆã‚’å†æç”»ã™ã‚‹
         */
        function renderLocations() {
            const locations = JSON.parse(localStorage.getItem(STORAGE_KEY)) || [];
            locationListUl.innerHTML = '';

            if (locations.length === 0) {
                locationListUl.innerHTML = '<li>ã¾ã è¨˜éŒ²ã•ã‚ŒãŸå ´æ‰€ã¯ã‚ã‚Šã¾ã›ã‚“ã€‚</li>';
                return;
            }

            locations.forEach(location => {
                const li = document.createElement('li');
                
                // --- â–¼â–¼â–¼ å¤‰æ›´ç‚¹: é«˜åº¦æƒ…å ±ã®è¡¨ç¤ºã‚’è¿½åŠ  â–¼â–¼â–¼ ---
                let altitudeInfo = 'é«˜åº¦: å–å¾—ä¸å¯';
                // é«˜åº¦æƒ…å ±ãŒnullã§ãªã„å ´åˆã®ã¿è¡¨ç¤ºã‚’æ•´å½¢
                if (location.alt !== null && location.alt !== undefined) {
                    altitudeInfo = `é«˜åº¦: ${location.alt.toFixed(2)}m (ç²¾åº¦: Â±${location.altAcc}m)`;
                }

                li.innerHTML = `
                    <strong>${escapeHTML(location.name)}</strong>
                    <div class="coords">
                        ç·¯åº¦: ${location.lat}, çµŒåº¦: ${location.lon} (ç²¾åº¦: ${location.acc}m)<br>
                        ${altitudeInfo}
                    </div>
                    <div class="timestamp">${new Date(location.timestamp).toLocaleString()}</div>
                `;
                // --- â–²â–²â–² å¤‰æ›´ç‚¹ã“ã“ã¾ã§ â–²â–²â–² ---
                locationListUl.appendChild(li);
            });
        }

        /**
         * ä½ç½®æƒ…å ±ã‚’å–å¾—ã™ã‚‹
         */
        function getLocation() {
            if (!navigator.geolocation) {
                statusDiv.textContent = 'ãŠä½¿ã„ã®ãƒ–ãƒ©ã‚¦ã‚¶ã¯ä½ç½®æƒ…å ±å–å¾—ã«å¯¾å¿œã—ã¦ã„ã¾ã›ã‚“ã€‚';
                return;
            }

            statusDiv.textContent = 'ä½ç½®æƒ…å ±ã‚’å–å¾—ä¸­...';
            saveLocationBtn.disabled = true;

            navigator.geolocation.getCurrentPosition(
                // æˆåŠŸã—ãŸæ™‚ã®ã‚³ãƒ¼ãƒ«ãƒãƒƒã‚¯
                (position) => {
                    currentPosition = position;
                    
                    // --- â–¼â–¼â–¼ å¤‰æ›´ç‚¹: å–å¾—æˆåŠŸæ™‚ã®è¡¨ç¤ºã«é«˜åº¦ã‚’è¿½åŠ  â–¼â–¼â–¼ ---
                    const coords = position.coords;
                    let altitudeText = 'é«˜åº¦: å–å¾—ä¸å¯';
                    if (coords.altitude !== null) {
                        altitudeText = `é«˜åº¦: ${coords.altitude.toFixed(2)}m (ç²¾åº¦: Â±${coords.altitudeAccuracy}m)`;
                    }
                    statusDiv.innerHTML = `
                        <b>å–å¾—æˆåŠŸï¼</b><br>
                        ç·¯åº¦: ${coords.latitude.toFixed(6)}, çµŒåº¦: ${coords.longitude.toFixed(6)}<br>
                        ${altitudeText}
                    `;
                    // --- â–²â–²â–² å¤‰æ›´ç‚¹ã“ã“ã¾ã§ â–²â–²â–² ---

                    saveLocationBtn.disabled = false;
                    locationNameInput.focus();
                },
                // å¤±æ•—ã—ãŸæ™‚ã®ã‚³ãƒ¼ãƒ«ãƒãƒƒã‚¯ (å¤‰æ›´ãªã—)
                (error) => {
                    let errorMessage;
                    switch(error.code) {
                        case error.PERMISSION_DENIED: errorMessage = "ä½ç½®æƒ…å ±ã®åˆ©ç”¨ãŒè¨±å¯ã•ã‚Œã¾ã›ã‚“ã§ã—ãŸã€‚"; break;
                        case error.POSITION_UNAVAILABLE: errorMessage = "ä½ç½®æƒ…å ±ã‚’å–å¾—ã§ãã¾ã›ã‚“ã§ã—ãŸã€‚"; break;
                        case error.TIMEOUT: errorMessage = "ä½ç½®æƒ…å ±ã®å–å¾—ãŒã‚¿ã‚¤ãƒ ã‚¢ã‚¦ãƒˆã—ã¾ã—ãŸã€‚"; break;
                        default: errorMessage = "åŸå› ä¸æ˜ã®ã‚¨ãƒ©ãƒ¼ãŒç™ºç”Ÿã—ã¾ã—ãŸã€‚"; break;
                    }
                    statusDiv.textContent = `ã‚¨ãƒ©ãƒ¼: ${errorMessage}`;
                }
            );
        }

        /**
         * ç¾åœ¨ã®ä½ç½®æƒ…å ±ã‚’ä¿å­˜ã™ã‚‹
         */
        function saveLocation() {
            const name = locationNameInput.value.trim();
            if (!name) {
                alert('å ´æ‰€ã®åå‰ã‚’å…¥åŠ›ã—ã¦ãã ã•ã„ã€‚');
                return;
            }
            if (!currentPosition) {
                alert('å…ˆã«ä½ç½®æƒ…å ±ã‚’å–å¾—ã—ã¦ãã ã•ã„ã€‚');
                return;
            }
            
            // --- â–¼â–¼â–¼ å¤‰æ›´ç‚¹: ä¿å­˜ãƒ‡ãƒ¼ã‚¿ã«é«˜åº¦æƒ…å ±ã‚’è¿½åŠ  â–¼â–¼â–¼ ---
            const newLocation = {
                name: name,
                lat: currentPosition.coords.latitude,
                lon: currentPosition.coords.longitude,
                acc: currentPosition.coords.accuracy,
                alt: currentPosition.coords.altitude, // é«˜åº¦ (ãƒ¡ãƒ¼ãƒˆãƒ«å˜ä½)
                altAcc: currentPosition.coords.altitudeAccuracy, // é«˜åº¦ã®ç²¾åº¦ (ãƒ¡ãƒ¼ãƒˆãƒ«å˜ä½)
                timestamp: new Date().getTime()
            };
            // --- â–²â–²â–² å¤‰æ›´ç‚¹ã“ã“ã¾ã§ â–²â–²â–² ---

            const locations = JSON.parse(localStorage.getItem(STORAGE_KEY)) || [];
            locations.push(newLocation);

            localStorage.setItem(STORAGE_KEY, JSON.stringify(locations));
            
            alert(`ã€Œ${name}ã€ã‚’è¨˜éŒ²ã—ã¾ã—ãŸï¼`);
            locationNameInput.value = '';
            currentPosition = null;
            saveLocationBtn.disabled = true;
            statusDiv.textContent = 'ãƒœã‚¿ãƒ³ã‚’æŠ¼ã—ã¦æ¬¡ã®ä½ç½®æƒ…å ±ã‚’å–å¾—ã—ã¦ãã ã•ã„ã€‚';

            renderLocations();
        }
        
        // HTMLã‚¨ã‚¹ã‚±ãƒ¼ãƒ—ç”¨ã®ç°¡æ˜“é–¢æ•° (å¤‰æ›´ãªã—)
        function escapeHTML(str) {
            return str.replace(/[&<>"']/g, match => ({'&': '&amp;','<': '&lt;','>': '&gt;','"': '&quot;',"'": '&#39;'})[match]);
        }

        // --- ã‚¤ãƒ™ãƒ³ãƒˆãƒªã‚¹ãƒŠãƒ¼ã¨åˆæœŸåŒ–å‡¦ç† (å¤‰æ›´ãªã—) ---
        getLocationBtn.addEventListener('click', getLocation);
        saveLocationBtn.addEventListener('click', saveLocation);
        document.addEventListener('DOMContentLoaded', renderLocations);

    </script>
